 @import url('variables.scss');
 @import url('./tools/mixins.scss');


/*================ Headings ================*/
h1,
h2,
h3,
h4,
h5,
h6 {
	color: $color-title-text;
	font-weight: bold;	
	text-align: $text-align-title;
	margin: $margin-size-title 0;
	text-decoration: none;
}

.h1 {
	font-size: $font-size-title * 0.7;
	line-height: floor($line-height-title * 0.69);

	@include media-query($medium-up) {
    	font-size: $font-size-title;
		line-height: floor($line-height-title);
	}
}

.h2 {
	font-size: $font-size-title * 0.6;
	line-height: floor($line-height-title * 0.59);

	@include media-query($medium-up) {
    	font-size: $font-size-title * 0.9;
		line-height: floor($line-height-title * 0.9);
	}
}

.h3 {
	font-size: $font-size-title * 0.53;
	line-height: floor($line-height-title * 0.53);

	@include media-query($medium-up) {
    	font-size: $font-size-title * 0.75;
		line-height: floor($line-height-title * 0.76);
	}
}

.h4 {
	font-size: $font-size-title * 0.45;
	line-height: floor($line-height-title * 0.47);

	@include media-query($medium-up) {
    	font-size: $font-size-title * 0.6;
		line-height: floor($line-height-title * 0.6);
	}
}

.h5 {
	font-size: floor($font-size-title * 0.4);
	line-height: floor($line-height-title * 0.39);

	@include media-query($medium-up) {
    	font-size: floor($font-size-title * 0.53);
		line-height: floor($line-height-title * 0.53);
	}
}

.h6 {
	font-size: floor($font-size-title * 0.35);
	line-height: floor($line-height-title * 0.35);

	@include media-query($medium-up) {
    	font-size: floor($font-size-title * 0.45);
		line-height: floor($line-height-title * 0.47);
	}
}

/*================ Text ================*/

html {
	body,
	input,
	textarea,
	button,
	select {
		font-size: $base-text-size;
	}
}

a {
	text-decoration: none;
}

span, 
p {
  font-size: 1em;
  color: $color-body-text;

  @include media-query($medium-up) {
    font-size: $desktop-text-size;
  }
}

/*================ Buttons ================*/

.btn {
	padding: floor($standard-padding * 0.82) 0px;
	margin: 0 auto;
	background-color: $button-main-color;

	.btn__text {
		color: $button-main-text-color;
		position: absolute;
	    top: 25%;
	    left: 0px;
	    text-align: center;
	    width: 100%;
	}

	&.btn-secondary {
		background-color: $secondary-button-color;

		.btn__text {
			color: $secondary-button-text-color;
		}
	}
}

.btn {

	height: 42px;	
	width: 125px;
	position: relative;

	@include media-query($medium-up) {
		height: 55px;
		width: 175px;
	}
}

/*================ Carousel ================*/

.collection-description {

	max-width: 284px;
	margin: 0 auto;
	text-align: center;

	@include media-query($medium-up) {
		max-width: 611px;
		margin: 0 auto;
		text-align: center;
	}
}

/*================ Carousel ================*/

.main-carousel {

	padding-bottom: floor($standard-padding * 2.27);

	.flickity-prev-next-button {
		display: none;
	}

	@include media-query($medium-up) {

		margin: floor($standard-padding * 1.86) 75px 0 75px;

		.flickity-prev-next-button {

			display: inherit;

			&.next {
				right: -50px;
			}

			&.previous {
				left: -50px;
			}
		}
	}

}

.carousel-cell {
	width: 100%;
	padding: 0 floor($standard-padding * 0.82);

	.carousel-cell__product-title {
		text-align: left;
		margin: floor($margin-size-title * 0.95) 0 0 0;
	}

	.carousel-cell__product-price {
		text-align: left;
		margin: floor($margin-text-size * 0.95) 0 0 0;
	}

	@include media-query($medium-up) {

		width: 25%;
		padding: 0 $standard-padding;

		.carousel-cell__product-title {
			text-align: left;
			margin: floor($margin-size-title * 0.73) 0 0 0;
		}

		.carousel-cell__product-price {
			text-align: left;
			margin: floor($margin-text-size * 0.32) 0 0 0;
		}
	}

	.carousel-cell__image-container {

		position: relative;

		img {
			min-width: 100%;
		}
	}

	.carousel-cell__add-cart {
		display: none;
		position: absolute;
		bottom: 16px;
		width: 80%;
		left: 0px;
		margin-left: auto;
		margin-right: auto;
		right: 0px;
		text-align: center;
	}

	&:hover .carousel-cell__add-cart {
		display: block;
	}
}







